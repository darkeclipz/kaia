(defrule
    (goal g-train yes)
    (goal g-train-spearman-line yes)
    (food-amount >= min-food-needed-for-training)
    (wood-amount >= min-wood-needed-for-training)
    (unit-type-count-total spearman-line g:< g-max-unit-size)
    ; (gold-amount < 2000)
    (housing-headroom >= 5)
    (can-train spearman-line)
    (up-get-fact building-type-count-total barracks g-count)
    (up-pending-objects c: spearman-line g:< g-count)
    =>
    (train spearman-line)
)