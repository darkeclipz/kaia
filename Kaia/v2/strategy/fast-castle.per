    (up-pending-objects c: archer-line < 2)
    (can-train archer-line)
    =>
    (train archer-line)
)

; knight to defend
(defrule
    (goal g-fast-castle yes)
    (unit-type-count-total knight-line < 8)
    (up-pending-objects c: knight-line < 2)
    (can-train knight-line)
