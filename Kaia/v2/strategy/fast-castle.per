; enable fast castle if there are a lot of resources, e.g. deathmatch
(defrule
    (false)
    (game-time < 30)
    (food-amount > 10000)
    (wood-amount > 10000)
    (gold-amount > 5000)
    (stone-amount > 2500)
    =>
    (set-goal g-fast-castle yes)
    (chat-local-to-self "fast castle: enabled")
    (disable-self)
)

(defrule
    (goal g-fast-castle yes)
    =>
    (set-goal g-train-archer-line yes)
    (set-goal g-train-villager no)
    (set-goal g-build no)
    (disable-self)
)

(defrule
    (goal g-fast-castle yes)
    (can-train villager)
    =>
    (train villager)
    (disable-self)
)

(defrule
    (goal g-fast-castle yes)
    (current-age == feudal-age)
    (can-train villager)
    =>
    (train villager)
    (disable-self)
)

(defrule
    (goal g-fast-castle yes)
    (can-build mill)
    (up-pending-objects c: mill == 0)
    =>
    (build mill)
    (disable-self)
)

(defrule
    (goal g-fast-castle yes)
    (can-build barracks)
    (up-pending-objects c: barracks == 0)
    =>
    (build barracks)
    (disable-self)
)

(defrule
    (goal g-fast-castle yes)
    (can-build house)
    (up-pending-objects c: house < 3)
    (current-age == dark-age)
    =>
    (build house)
)

(defrule
    (goal g-fast-castle yes)
    (can-build blacksmith)
    (up-pending-objects c: blacksmith == 0)
    =>
    (build blacksmith)
    (disable-self)
