; research feudal asap
(defrule
    (goal g-fast-castle yes)
    (can-research-with-escrow feudal-age)
    =>
    (release-escrow food)
    (release-escrow wood)
    (research feudal-age)
    (set-goal g-build yes)
)

; research castle asap
(defrule
    (goal g-fast-castle yes)
    (can-research-with-escrow castle-age)
    =>
    (release-escrow food)
    (release-escrow wood)
    (research castle-age)
    (set-goal g-train-villager yes)
)

; mining camps before its full with other buildings
(defrule
    (goal g-fast-castle yes)
    (goal g-build yes)
(or (resource-found gold)
    (resource-found stone))
    (goal g-fast-castle yes)
    (wood-amount > 2000)
    (up-pending-objects c: mining-camp == 0)
    (building-type-count-total mining-camp < 2)
    (can-build mining-camp)
    =>
    (build mining-camp)
    (up-modify-sn sn-mining-camp-max-distance c:+ 15)
)

