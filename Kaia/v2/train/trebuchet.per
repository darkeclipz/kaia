(defrule
    (goal g-train yes)
    (goal g-train-trebuchet yes)
    (wood-amount >= min-wood-needed-for-training)
    (gold-amount >= min-gold-needed-for-training)
    (housing-headroom >= 5)
    (or
        (and (current-age == castle-age)(unit-type-count-total trebuchet < 2))
        (and (current-age >= imperial-age)(unit-type-count-total trebuchet < 30))
    )
    (up-pending-objects c: trebuchet == 0)
    (can-train trebuchet)
    =>
    (train trebuchet)
)