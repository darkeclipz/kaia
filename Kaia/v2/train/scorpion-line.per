(defrule
    (goal g-train yes)
    (goal g-train-scorpion-line yes)
    (wood-amount >= min-wood-needed-for-training)
    (gold-amount >= min-gold-needed-for-training)
    (population-headroom >= 5)
    (or
        (and (current-age == castle-age)(unit-type-count-total scorpion-line < 4))
        (and (current-age >= imperial-age)(unit-type-count-total scorpion-line < 12))
    )
    (up-pending-objects c: scorpion-line == 0)
    (can-train scorpion-line)
    =>
    (train scorpion-line)
)