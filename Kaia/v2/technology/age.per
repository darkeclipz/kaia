; research feudal age
(defrule
    (goal g-research yes)
    (can-research-with-escrow feudal-age)
    (unit-type-count-total villager >= min-villagers-dark-age)
    =>
    (release-escrow food)
    (release-escrow wood)
    (research feudal-age)
)

