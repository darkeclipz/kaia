(defrule
    (goal g-build yes)
    (building-type-count-total mill > 0)
    (can-build-with-escrow lumber-camp)
    (resource-found wood)
    (dropsite-min-distance wood > 3)
    (up-pending-objects c: lumber-camp == 0)
    =>
    (release-escrow wood)
    (build lumber-camp)
    (up-modify-sn sn-lumber-camp-max-distance c:+ 3)
)